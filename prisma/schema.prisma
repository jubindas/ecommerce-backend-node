generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id             String   @id @default(uuid())
  fullName       String
  email          String   @unique
  password       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  isActive       Boolean  @default(true)
  isAdmin        Boolean  @default(false)
  isUserVerified Boolean  @default(false)

  bankDetails BankDetails?
  cart        Cart[]
  wishlist    Wishlist[]
  coupons     CouponUser[]
  addresses   Address[]
  orders      Order[]
}

model BankDetails {
  id                String   @id @default(uuid())
  bankName          String
  accountHolderName String
  ifsc              String
  branchName        String
  accountNumber     String
  userId            String   @unique
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id          String   @id @default(uuid())
  name        String
  isActive    Boolean  @default(true)
  isFeatured  Boolean? @default(false)
  description String?
  slug        String?  @unique
  parentId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent                 Category?        @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children               Category[]       @relation("CategoryHierarchy")
  masterCategoryProducts Product[]        @relation("MasterCategory")
  lastCategoryProducts   Product[]        @relation("LastCategory")
  coupons                CouponCategory[]

  @@index([parentId])
  @@index([slug])
  @@index([isActive])
}

model Product {
  id            String  @id @default(uuid())
  productName   String
  shortDesc     String?
  longDesc      String?
  mainImage     String
  productImages String? @db.LongText
  youtubeLink   String?

  metaData Json?

  masterCategoryId String
  lastCategoryId   String?

  masterCategory Category  @relation("MasterCategory", fields: [masterCategoryId], references: [id], onDelete: Cascade)
  lastCategory   Category? @relation("LastCategory", fields: [lastCategoryId], references: [id], onDelete: SetNull)

  isFeatured        Boolean @default(false)
  isBestSelling     Boolean @default(false)
  isNewCollection   Boolean @default(false)
  isActive          Boolean @default(true)
  hasCashOnDelivery Boolean @default(true)

  hasVariants Boolean          @default(false)
  variants    ProductVariant[]

  // Fields for Simple Products (without variants)
  // If hasVariants is true, these might be ignored or used as defaults
  buyingPrice        Float?
  maximumRetailPrice Float?
  sellingPrice       Float?
  quantity           Int      @default(0)
  size               String? // Legacy or simple product size
  expiryDate         DateTime?
  dimensions         Json?
  
  // Legacy / Other fields
  isRelatedItem Boolean @default(false)
  paymentType   String? // Made optional as it might be derived or fixed
  sizeChartId   String?
  sizeChart     SizeChart? @relation(fields: [sizeChartId], references: [id], onDelete: SetNull)

  // Explicit relations
  cart       Cart[]
  wishlist   Wishlist[]
  coupons    CouponProduct[]
  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([masterCategoryId])
  @@index([lastCategoryId])
  @@index([isFeatured])
  @@index([isBestSelling])
  @@index([isActive])
  @@index([productName])
}

model ProductVariant {
  id        String @id @default(uuid())
  productId String

  sku         String  @unique
  variantName String?

 
  color String?
  size  String?

  dimensions Json?
  attributes Json?

  variantImages      String? @db.LongText
  variantDescription String?

   
  buyingPrice        Float?
  maximumRetailPrice Float?
  sellingPrice       Float?
  quantity           Int
  lowStockAlert      Int?   @default(5)

  expiryDate        DateTime?
  hasCashOnDelivery Boolean   @default(true)

  sizeChartId String?
  sizeChart   SizeChart? @relation(fields: [sizeChartId], references: [id], onDelete: SetNull)

  isRelatedItem Boolean @default(false)
  isActive      Boolean @default(true)
  isDefault     Boolean @default(false)

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  cartItems     Cart[]
  wishlistItems Wishlist[]
  orderItems    OrderItem[]
  couponProducts CouponProduct[]  

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, color, size])
  @@index([productId])
  @@index([sku])
  @@index([sizeChartId])
  @@index([isActive])
  @@index([color])
  @@index([size])
}

model Cart {
  id         String   @id @default(uuid())
  userId     String
  productId  String
  variantId  String?
  quantity   Int      @default(1)
  couponCode String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, variantId])
  @@index([userId])
  @@index([productId])
  @@index([variantId])
}

model Address {
  id               String   @id @default(uuid())
  mainAddress      String
  secondaryAddress String?
  landmark         String?
  pincode          String
  state            String?
  city             String?
  district         String?
  isDefault        Boolean  @default(false)
  userId           String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@index([userId])
}

model Wishlist {
  id        String   @id @default(uuid())
  userId    String
  productId String
  variantId String?
  createdAt DateTime @default(now())

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, variantId])
  @@index([userId])
  @@index([productId])
  @@index([variantId])
}

model ColorScheme {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
}

model SizeChart {
  id        String   @id @default(uuid())
  name      String
  sizes     Json
  colors    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  variants ProductVariant[]
}

enum CouponType {
  FIXED
  PERCENTAGE
}

model Coupon {
  id            Int        @id @default(autoincrement())
  code          String     @unique
  type          CouponType
  value         Float
  minOrderValue Float?
  maxDiscount   Float?
  isStackable   Boolean    @default(false)
  isActive      Boolean    @default(true)

  startsAt  DateTime
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      CouponUser[]
  products   CouponProduct[]
  categories CouponCategory[]
  orders     Order[]

  @@index([code])
  @@index([isActive])
  @@index([expiresAt])
}

model CouponUser {
  id        String    @id @default(uuid())
  couponId  Int
  userId    String
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  coupon Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([couponId, userId])
  @@index([userId])
  @@index([couponId])
}

model CouponProduct {
  id        String   @id @default(uuid())
  couponId  Int
  productId String
  variantId String?
  createdAt DateTime @default(now())

  coupon  Coupon          @relation(fields: [couponId], references: [id], onDelete: Cascade)
  product Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([couponId, productId, variantId])
  @@index([productId])
  @@index([couponId])
  @@index([variantId])
}

model CouponCategory {
  id         String   @id @default(uuid())
  couponId   Int
  categoryId String
  createdAt  DateTime @default(now())

  coupon   Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([couponId, categoryId])
  @@index([categoryId])
  @@index([couponId])
}

model Blog {
  id            String   @id @default(uuid())
  header        String
  description   String?
  content       String   @db.LongText
  thumbImage    String?
  contentImages Json?
  author        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Order {
  id          String @id @default(uuid())
  orderNumber String @unique

  userId String
  user   User   @relation(fields: [userId], references: [id])

  addressId String
  address   Address @relation(fields: [addressId], references: [id])

  totalAmount    Float
  discountAmount Float @default(0)
  finalAmount    Float

  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod String
  paymentId     String?

  couponId Int?
  coupon   Coupon? @relation(fields: [couponId], references: [id])

  orderItems OrderItem[]
  history    OrderHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model OrderItem {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  variantId String?
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  quantity Int
  price    Float

  size  String?
  color String?
}

model OrderHistory {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  status  OrderStatus
  comment String?

  createdAt DateTime @default(now())
  createdBy String?
}

